{
    "extends": ["eslint:recommended", "plugin:storybook/recommended"],
    "env": {
        "node": true,
        "browser": true,
        "es6": true,
        "jest": true
    },
    "parserOptions": {
        "ecmaVersion": 6
    },
    "overrides": [
        {
            "extends": ["plugin:@nrwl/nx/typescript"],
            "files": ["*.ts", "*.tsx"],
            "rules": {}
        },
        {
            "extends": ["plugin:@nrwl/nx/javascript"],
            "files": ["*.js", "*.jsx"],
            "rules": {}
        },
        {
            "files": "*.json",
            "parser": "jsonc-eslint-parser",
            "rules": {}
        }
    ]
}
