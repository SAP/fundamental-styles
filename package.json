  },
  "resolutions": {
    "nx": "22.1.3"
  },
  "browserslist": [
    "last 2 versions"
  ],
  "lint-staged": {
    "{packages,stories,.storybook}/**/*.(sa|sc|c)ss": "stylelint --fix",
    "*.js": "eslint --fix"
  },
