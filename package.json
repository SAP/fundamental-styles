    "bundlesize": "0.18.2",
    "chromatic": "^11.25.2",
    "clean-css": "5.3.3",
    "clean-css-cli": "5.4.1",
    "colors": "1.4.0",
    "conventional-changelog": "7.1.1",
    "conventional-changelog-angular": "8.1.0",
    "conventional-changelog-cli": "5.0.0",
    "conventional-recommended-bump": "11.2.0",
