{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://sap.github.io/fundamental-styles/schemas/checkbox.json",
  "title": "Checkbox Component",
  "description": "Multiple selection control for selecting multiple options",
  "type": "object",
  "properties": {
    "baseClass": {
      "const": "fd-checkbox",
      "description": "Required base class"
    },
    "modifiers": {
      "type": "array",
      "items": {
        "enum": [
          "fd-checkbox--required",
          "fd-checkbox--wrap"
        ]
      },
      "description": "Optional modifier classes"
    },
    "elements": {
      "type": "object",
      "description": "Optional element classes with their available modifiers",
      "properties": {
        "fd-checkbox__label": {
          "type": "object",
          "description": "label element",
          "properties": {
            "class": {
              "const": "fd-checkbox__label",
              "description": "Element class name"
            }
          }
        },
        "fd-checkbox__label-container": {
          "type": "object",
          "description": "label-container element",
          "properties": {
            "class": {
              "const": "fd-checkbox__label-container",
              "description": "Element class name"
            }
          }
        },
        "fd-checkbox__text": {
          "type": "object",
          "description": "text element",
          "properties": {
            "class": {
              "const": "fd-checkbox__text",
              "description": "Element class name"
            }
          }
        },
        "fd-checkbox__checkmark": {
          "type": "object",
          "description": "checkmark element",
          "properties": {
            "class": {
              "const": "fd-checkbox__checkmark",
              "description": "Element class name"
            }
          }
        }
      },
      "additionalProperties": false
    }
  },
  "required": [
    "baseClass"
  ]
}
