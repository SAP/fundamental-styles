{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://sap.github.io/fundamental-styles/schemas/rating-indicator.json",
  "title": "Rating Indicator Component",
  "description": "The rating indicator displays a group of icons or images (usually stars) that indicate a rating.",
  "type": "object",
  "properties": {
    "baseClass": {
      "const": "fd-rating-indicator",
      "description": "Required base class"
    },
    "modifiers": {
      "type": "array",
      "items": {
        "enum": [
          "fd-rating-indicator--icon",
          "fd-rating-indicator--hide-dynamic-text",
          "fd-rating-indicator--display-mode",
          "fd-rating-indicator--non-interactive",
          "fd-rating-indicator--half-star",
          "fd-rating-indicator--zero-rating"
        ]
      },
      "description": "Optional modifier classes"
    },
    "elements": {
      "type": "object",
      "description": "Optional element classes with their available modifiers",
      "properties": {
        "fd-rating-indicator__input": {
          "type": "object",
          "description": "input element",
          "properties": {
            "class": {
              "const": "fd-rating-indicator__input",
              "description": "Element class name"
            }
          }
        },
        "fd-rating-indicator__label": {
          "type": "object",
          "description": "label element",
          "properties": {
            "class": {
              "const": "fd-rating-indicator__label",
              "description": "Element class name"
            }
          }
        },
        "fd-rating-indicator__container": {
          "type": "object",
          "description": "container element",
          "properties": {
            "class": {
              "const": "fd-rating-indicator__container",
              "description": "Element class name"
            }
          }
        },
        "fd-rating-indicator__dynamic-text": {
          "type": "object",
          "description": "dynamic-text element",
          "properties": {
            "class": {
              "const": "fd-rating-indicator__dynamic-text",
              "description": "Element class name"
            }
          }
        }
      },
      "additionalProperties": false
    }
  },
  "required": [
    "baseClass"
  ]
}