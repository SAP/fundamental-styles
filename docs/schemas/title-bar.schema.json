{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://sap.github.io/fundamental-styles/schemas/title-bar.json",
  "title": "Title Bar Component",
  "description": "Title Bar component",
  "type": "object",
  "properties": {
    "baseClass": {
      "const": "fd-title-bar",
      "description": "Required base class"
    },
    "elements": {
      "type": "object",
      "description": "Optional element classes with their available modifiers",
      "properties": {
        "fd-title-bar__button-container": {
          "type": "object",
          "description": "button-container element",
          "properties": {
            "class": {
              "const": "fd-title-bar__button-container",
              "description": "Element class name"
            }
          }
        },
        "fd-title-bar__container": {
          "type": "object",
          "description": "container element",
          "properties": {
            "class": {
              "const": "fd-title-bar__container",
              "description": "Element class name"
            }
          }
        },
        "fd-title-bar__title-container": {
          "type": "object",
          "description": "title-container element",
          "properties": {
            "class": {
              "const": "fd-title-bar__title-container",
              "description": "Element class name"
            }
          }
        },
        "fd-title-bar__title": {
          "type": "object",
          "description": "title element",
          "properties": {
            "class": {
              "const": "fd-title-bar__title",
              "description": "Element class name"
            }
          }
        },
        "fd-title-bar__subtitle": {
          "type": "object",
          "description": "subtitle element",
          "properties": {
            "class": {
              "const": "fd-title-bar__subtitle",
              "description": "Element class name"
            }
          }
        }
      },
      "additionalProperties": false
    }
  },
  "required": [
    "baseClass"
  ]
}
