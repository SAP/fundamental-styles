{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://sap.github.io/fundamental-styles/schemas/avatar.json",
  "title": "Avatar Component",
  "description": "User profile picture or initials display",
  "type": "object",
  "properties": {
    "baseClass": {
      "const": "fd-avatar",
      "description": "Required base class"
    },
    "modifiers": {
      "type": "array",
      "items": {
        "enum": [
          "fd-avatar--interactive",
          "fd-avatar--circle",
          "fd-avatar--background-contain",
          "fd-avatar--transparent",
          "fd-avatar--tile",
          "fd-avatar--placeholder",
          "fd-avatar--thumbnail",
          "fd-avatar--border",
          "fd-avatar--overflow",
          "fd-avatar--shell",
          "fd-avatar--accent-color-1",
          "fd-avatar--md",
          "fd-avatar--accent-color-2",
          "fd-avatar--accent-color-3",
          "fd-avatar--accent-color-4",
          "fd-avatar--accent-color-5",
          "fd-avatar--accent-color-6",
          "fd-avatar--accent-color-7",
          "fd-avatar--accent-color-8",
          "fd-avatar--accent-color-9",
          "fd-avatar--accent-color-10",
          "fd-avatar--indication-color-1",
          "fd-avatar--indication-color-2",
          "fd-avatar--indication-color-3",
          "fd-avatar--indication-color-4",
          "fd-avatar--indication-color-5",
          "fd-avatar--indication-color-6",
          "fd-avatar--indication-color-7",
          "fd-avatar--indication-color-8",
          "fd-avatar--indication-color-9",
          "fd-avatar--indication-color-10",
          "fd-avatar--xs",
          "fd-avatar--sm",
          "fd-avatar--lg",
          "fd-avatar--xl",
          "fd-avatar--s",
          "fd-avatar--m",
          "fd-avatar--l",
          "fd-avatar--40",
          "fd-avatar--96"
        ]
      },
      "description": "Optional modifier classes"
    },
    "elements": {
      "type": "object",
      "description": "Optional element classes with their available modifiers",
      "properties": {
        "fd-avatar__zoom-icon": {
          "type": "object",
          "description": "zoom-icon element",
          "properties": {
            "class": {
              "const": "fd-avatar__zoom-icon",
              "description": "Element class name"
            }
          }
        },
        "fd-avatar__icon": {
          "type": "object",
          "description": "icon element",
          "properties": {
            "class": {
              "const": "fd-avatar__icon",
              "description": "Element class name"
            }
          }
        }
      },
      "additionalProperties": false
    }
  },
  "required": [
    "baseClass"
  ]
}