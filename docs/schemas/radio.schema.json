{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://sap.github.io/fundamental-styles/schemas/radio.json",
  "title": "Radio Button Component",
  "description": "Single selection control for choosing one option from a group",
  "type": "object",
  "properties": {
    "baseClass": {
      "const": "fd-radio",
      "description": "Required base class"
    },
    "modifiers": {
      "type": "array",
      "items": {
        "enum": [
          "fd-radio--wrap"
        ]
      },
      "description": "Optional modifier classes"
    },
    "elements": {
      "type": "object",
      "description": "Optional element classes with their available modifiers",
      "properties": {
        "fd-radio__label": {
          "type": "object",
          "description": "label element",
          "properties": {
            "class": {
              "const": "fd-radio__label",
              "description": "Element class name"
            }
          }
        },
        "fd-radio__text": {
          "type": "object",
          "description": "text element",
          "properties": {
            "class": {
              "const": "fd-radio__text",
              "description": "Element class name"
            }
          }
        }
      },
      "additionalProperties": false
    }
  },
  "required": [
    "baseClass"
  ]
}
