{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://sap.github.io/fundamental-styles/schemas/product-switch.json",
  "title": "Product Switch Component",
  "description": "The product switch provides users with role-based access to several products or lines of businesses (LoBs). The product switch displays an icon button that triggers a **Popover** with the products or LoBs. Because it is designed to be as simple as possible, the product switch only has one level of navigation.",
  "type": "object",
  "properties": {
    "baseClass": {
      "const": "fd-product-switch",
      "description": "Required base class"
    },
    "elements": {
      "type": "object",
      "description": "Optional element classes with their available modifiers",
      "properties": {
        "fd-product-switch__list": {
          "type": "object",
          "description": "list element",
          "properties": {
            "class": {
              "const": "fd-product-switch__list",
              "description": "Element class name"
            }
          }
        },
        "fd-product-switch__item": {
          "type": "object",
          "description": "item element",
          "properties": {
            "class": {
              "const": "fd-product-switch__item",
              "description": "Element class name"
            }
          }
        },
        "fd-product-switch__icon": {
          "type": "object",
          "description": "icon element",
          "properties": {
            "class": {
              "const": "fd-product-switch__icon",
              "description": "Element class name"
            }
          }
        },
        "fd-product-switch__text": {
          "type": "object",
          "description": "text element",
          "properties": {
            "class": {
              "const": "fd-product-switch__text",
              "description": "Element class name"
            }
          }
        },
        "fd-product-switch__title": {
          "type": "object",
          "description": "title element",
          "properties": {
            "class": {
              "const": "fd-product-switch__title",
              "description": "Element class name"
            }
          }
        },
        "fd-product-switch__subtitle": {
          "type": "object",
          "description": "subtitle element",
          "properties": {
            "class": {
              "const": "fd-product-switch__subtitle",
              "description": "Element class name"
            }
          }
        },
        "fd-product-switch__body": {
          "type": "object",
          "description": "body element",
          "properties": {
            "class": {
              "const": "fd-product-switch__body",
              "description": "Element class name"
            },
            "modifiers": {
              "type": "array",
              "items": {
                "enum": [
                  "fd-product-switch__body--col-3",
                  "fd-product-switch__body--mobile"
                ]
              },
              "description": "Available modifiers for this element"
            }
          }
        },
        "fd-product-switch__body--col-3": {
          "type": "object",
          "description": "body--col-3 element",
          "properties": {
            "class": {
              "const": "fd-product-switch__body--col-3",
              "description": "Element class name"
            }
          }
        },
        "fd-product-switch__body--mobile": {
          "type": "object",
          "description": "body--mobile element",
          "properties": {
            "class": {
              "const": "fd-product-switch__body--mobile",
              "description": "Element class name"
            }
          }
        }
      },
      "additionalProperties": false
    }
  },
  "required": [
    "baseClass"
  ]
}
