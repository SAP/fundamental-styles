{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://sap.github.io/fundamental-styles/schemas/numeric-content.json",
  "title": "Numeric Content Component",
  "description": "Numeric Content component",
  "type": "object",
  "properties": {
    "baseClass": {
      "const": "fd-numeric-content",
      "description": "Required base class"
    },
    "modifiers": {
      "type": "array",
      "items": {
        "enum": [
          "fd-numeric-content--positive",
          "fd-numeric-content--critical",
          "fd-numeric-content--negative",
          "fd-numeric-content--informative",
          "fd-numeric-content--m",
          "fd-numeric-content--s",
          "fd-numeric-content--small-tile"
        ]
      },
      "description": "Optional modifier classes"
    },
    "elements": {
      "type": "object",
      "description": "Optional element classes with their available modifiers",
      "properties": {
        "fd-numeric-content__launch-icon-container": {
          "type": "object",
          "description": "launch-icon-container element",
          "properties": {
            "class": {
              "const": "fd-numeric-content__launch-icon-container",
              "description": "Element class name"
            }
          }
        },
        "fd-numeric-content__kpi-container": {
          "type": "object",
          "description": "kpi-container element",
          "properties": {
            "class": {
              "const": "fd-numeric-content__kpi-container",
              "description": "Element class name"
            }
          }
        },
        "fd-numeric-content__scale-container": {
          "type": "object",
          "description": "scale-container element",
          "properties": {
            "class": {
              "const": "fd-numeric-content__scale-container",
              "description": "Element class name"
            }
          }
        },
        "fd-numeric-content__launch-icon": {
          "type": "object",
          "description": "launch-icon element",
          "properties": {
            "class": {
              "const": "fd-numeric-content__launch-icon",
              "description": "Element class name"
            }
          }
        },
        "fd-numeric-content__kpi": {
          "type": "object",
          "description": "kpi element",
          "properties": {
            "class": {
              "const": "fd-numeric-content__kpi",
              "description": "Element class name"
            }
          }
        },
        "fd-numeric-content__scale": {
          "type": "object",
          "description": "scale element",
          "properties": {
            "class": {
              "const": "fd-numeric-content__scale",
              "description": "Element class name"
            }
          }
        }
      },
      "additionalProperties": false
    }
  },
  "required": [
    "baseClass"
  ]
}
