  "title": "Paddings Component",
  "description": "Paddings component",
  "type": "object",
  "properties": {
    "baseClass": {
      "const": "fd-paddings",
      "description": "Required base class"
    },
    "modifiers": {
      "type": "array",
      "items": {
        "enum": [
          "fd-paddings--tiny",
          "fd-paddings--sm",
          "fd-paddings--md",
          "fd-paddings--lg",
          "fd-paddings--none",
          "fd-paddings--xl"
        ]
      },
      "description": "Optional modifier classes"
    }
  },
  "required": [
    "baseClass"
  ]
}
