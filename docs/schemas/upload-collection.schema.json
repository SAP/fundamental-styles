{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://sap.github.io/fundamental-styles/schemas/upload-collection.json",
  "title": "Upload Collection Component",
  "description": "The upload collection control allows users to upload single or multiple files from a device (desktop, tablet, or phone) to the SAP Fiori app. Typically, uploaded files appear in an Attachments tab. However, files can also be displayed elsewhere.",
  "type": "object",
  "properties": {
    "baseClass": {
      "const": "fd-upload-collection",
      "description": "Required base class"
    },
    "modifiers": {
      "type": "array",
      "items": {
        "enum": [
          "fd-upload-collection--interactive",
          "fd-upload-collection--sm",
          "fd-upload-collection--byline",
          "fd-upload-collection--2-col",
          "fd-upload-collection--wrap",
          "fd-upload-collection--more"
        ]
      },
      "description": "Optional modifier classes"
    },
    "elements": {
      "type": "object",
      "description": "Optional element classes with their available modifiers",
      "properties": {
        "fd-upload-collection__thumbnail": {
          "type": "object",
          "description": "thumbnail element",
          "properties": {
            "class": {
              "const": "fd-upload-collection__thumbnail",
              "description": "Element class name"
            }
          }
        },
        "fd-upload-collection__button-group": {
          "type": "object",
          "description": "button-group element",
          "properties": {
            "class": {
              "const": "fd-upload-collection__button-group",
              "description": "Element class name"
            }
          }
        },
        "fd-upload-collection__title-container": {
          "type": "object",
          "description": "title-container element",
          "properties": {
            "class": {
              "const": "fd-upload-collection__title-container",
              "description": "Element class name"
            }
          }
        },
        "fd-upload-collection__description": {
          "type": "object",
          "description": "description element",
          "properties": {
            "class": {
              "const": "fd-upload-collection__description",
              "description": "Element class name"
            }
          }
        },
        "fd-upload-collection__status-group": {
          "type": "object",
          "description": "status-group element",
          "properties": {
            "class": {
              "const": "fd-upload-collection__status-group",
              "description": "Element class name"
            }
          }
        },
        "fd-upload-collection__extension": {
          "type": "object",
          "description": "extension element",
          "properties": {
            "class": {
              "const": "fd-upload-collection__extension",
              "description": "Element class name"
            }
          }
        },
        "fd-upload-collection__text-separator": {
          "type": "object",
          "description": "text-separator element",
          "properties": {
            "class": {
              "const": "fd-upload-collection__text-separator",
              "description": "Element class name"
            }
          }
        },
        "fd-upload-collection__form-item": {
          "type": "object",
          "description": "form-item element",
          "properties": {
            "class": {
              "const": "fd-upload-collection__form-item",
              "description": "Element class name"
            }
          }
        }
      },
      "additionalProperties": false
    }
  },
  "required": [
    "baseClass"
  ]
}