{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://sap.github.io/fundamental-styles/schemas/info-label.json",
  "title": "Info Label Component",
  "description": "Info Label is a small non-interactive numeric or text-based label.",
  "type": "object",
  "properties": {
    "baseClass": {
      "const": "fd-info-label",
      "description": "Required base class"
    },
    "modifiers": {
      "type": "array",
      "items": {
        "enum": [
          "fd-info-label--accent-color-",
          "fd-info-label--display"
        ]
      },
      "description": "Optional modifier classes"
    },
    "elements": {
      "type": "object",
      "description": "Optional element classes with their available modifiers",
      "properties": {
        "fd-info-label__icon": {
          "type": "object",
          "description": "icon element",
          "properties": {
            "class": {
              "const": "fd-info-label__icon",
              "description": "Element class name"
            }
          }
        },
        "fd-info-label__text": {
          "type": "object",
          "description": "text element",
          "properties": {
            "class": {
              "const": "fd-info-label__text",
              "description": "Element class name"
            }
          }
        },
        "fd-info-label__sr-only": {
          "type": "object",
          "description": "sr-only element",
          "properties": {
            "class": {
              "const": "fd-info-label__sr-only",
              "description": "Element class name"
            }
          }
        }
      },
      "additionalProperties": false
    }
  },
  "required": [
    "baseClass"
  ]
}