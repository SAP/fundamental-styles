{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://sap.github.io/fundamental-styles/schemas/input.json",
  "title": "Input Component",
  "description": "Single-line text input field for collecting user data",
  "type": "object",
  "properties": {
    "baseClass": {
      "const": "fd-input",
      "description": "Required base class"
    },
    "modifiers": {
      "type": "array",
      "items": {
        "enum": [
          "fd-input--no-number-spinner"
        ]
      },
      "description": "Optional modifier classes"
    },
    "elements": {
      "type": "object",
      "description": "Optional element classes with their available modifiers",
      "properties": {
        "fd-input__sr-only": {
          "type": "object",
          "description": "sr-only element",
          "properties": {
            "class": {
              "const": "fd-input__sr-only",
              "description": "Element class name"
            }
          }
        }
      },
      "additionalProperties": false
    }
  },
  "required": [
    "baseClass"
  ]
}