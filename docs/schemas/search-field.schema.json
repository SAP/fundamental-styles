{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://sap.github.io/fundamental-styles/schemas/search-field.json",
  "title": "Search Field Component",
  "description": "The Search Field component is intended to be used in BTP Tool Header.",
  "type": "object",
  "properties": {
    "baseClass": {
      "const": "fd-search-field",
      "description": "Required base class"
    },
    "elements": {
      "type": "object",
      "description": "Optional element classes with their available modifiers",
      "properties": {
        "fd-search-field__icon": {
          "type": "object",
          "description": "icon element",
          "properties": {
            "class": {
              "const": "fd-search-field__icon",
              "description": "Element class name"
            }
          }
        },
        "fd-search-field__input": {
          "type": "object",
          "description": "input element",
          "properties": {
            "class": {
              "const": "fd-search-field__input",
              "description": "Element class name"
            }
          }
        },
        "fd-search-field__underline": {
          "type": "object",
          "description": "underline element",
          "properties": {
            "class": {
              "const": "fd-search-field__underline",
              "description": "Element class name"
            }
          }
        },
        "fd-search-field__actions": {
          "type": "object",
          "description": "actions element",
          "properties": {
            "class": {
              "const": "fd-search-field__actions",
              "description": "Element class name"
            }
          }
        },
        "fd-search-field__action-container": {
          "type": "object",
          "description": "action-container element",
          "properties": {
            "class": {
              "const": "fd-search-field__action-container",
              "description": "Element class name"
            }
          }
        }
      },
      "additionalProperties": false
    }
  },
  "required": [
    "baseClass"
  ]
}
