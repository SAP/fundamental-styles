{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://sap.github.io/fundamental-styles/schemas/side-nav.json",
  "title": "Side Nav Component",
  "description": "Side Nav component",
  "type": "object",
  "properties": {
    "baseClass": {
      "const": "fd-side-nav",
      "description": "Required base class"
    },
    "modifiers": {
      "type": "array",
      "items": {
        "enum": [
          "fd-side-nav--top",
          "fd-side-nav--bottom"
        ]
      },
      "description": "Optional modifier classes"
    },
    "elements": {
      "type": "object",
      "description": "Optional element classes with their available modifiers",
      "properties": {
        "fd-side-nav__container": {
          "type": "object",
          "description": "container element",
          "properties": {
            "class": {
              "const": "fd-side-nav__container",
              "description": "Element class name"
            }
          }
        },
        "fd-side-nav__separator": {
          "type": "object",
          "description": "separator element",
          "properties": {
            "class": {
              "const": "fd-side-nav__separator",
              "description": "Element class name"
            }
          }
        },
        "fd-side-nav__group-header": {
          "type": "object",
          "description": "group-header element",
          "properties": {
            "class": {
              "const": "fd-side-nav__group-header",
              "description": "Element class name"
            }
          }
        }
      },
      "additionalProperties": false
    }
  },
  "required": [
    "baseClass"
  ]
}