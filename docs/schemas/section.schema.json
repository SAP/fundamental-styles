{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://sap.github.io/fundamental-styles/schemas/section.json",
  "title": "Section Component",
  "description": "Section component",
  "type": "object",
  "properties": {
    "baseClass": {
      "const": "fd-section",
      "description": "Required base class"
    },
    "modifiers": {
      "type": "array",
      "items": {
        "enum": [
          "fd-section--no-border",
          "fd-section--full-bleed",
          "fd-section--bleed"
        ]
      },
      "description": "Optional modifier classes"
    },
    "elements": {
      "type": "object",
      "description": "Optional element classes with their available modifiers",
      "properties": {
        "fd-section__header": {
          "type": "object",
          "description": "header element",
          "properties": {
            "class": {
              "const": "fd-section__header",
              "description": "Element class name"
            }
          }
        },
        "fd-section__title": {
          "type": "object",
          "description": "title element",
          "properties": {
            "class": {
              "const": "fd-section__title",
              "description": "Element class name"
            }
          }
        },
        "fd-section__actions": {
          "type": "object",
          "description": "actions element",
          "properties": {
            "class": {
              "const": "fd-section__actions",
              "description": "Element class name"
            }
          }
        },
        "fd-section__footer": {
          "type": "object",
          "description": "footer element",
          "properties": {
            "class": {
              "const": "fd-section__footer",
              "description": "Element class name"
            }
          }
        }
      },
      "additionalProperties": false
    }
  },
  "required": [
    "baseClass"
  ]
}