{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://sap.github.io/fundamental-styles/schemas/notification.json",
  "title": "Notification Component",
  "description": "Notifications are used to relay information to the user about a situation or task that requires their input. They can notice and access the notifications by the bell icon in the shell bar on the top-right of the screen. In the notification popover, they take immediate action, navigate to the source of a specific notification or in the case of a notification group, they can sort the list items in various ways.",
  "type": "object",
  "properties": {
    "baseClass": {
      "const": "fd-notification",
      "description": "Required base class"
    },
    "modifiers": {
      "type": "array",
      "items": {
        "enum": [
          "fd-notification--unread"
        ]
      },
      "description": "Optional modifier classes"
    },
    "elements": {
      "type": "object",
      "description": "Optional element classes with their available modifiers",
      "properties": {
        "fd-notification__body": {
          "type": "object",
          "description": "body element",
          "properties": {
            "class": {
              "const": "fd-notification__body",
              "description": "Element class name"
            }
          }
        },
        "fd-notification__content": {
          "type": "object",
          "description": "content element",
          "properties": {
            "class": {
              "const": "fd-notification__content",
              "description": "Element class name"
            }
          }
        },
        "fd-notification__header": {
          "type": "object",
          "description": "header element",
