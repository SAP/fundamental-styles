{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://sap.github.io/fundamental-styles/schemas/button-split.json",
  "title": "Button Split Component",
  "description": "Button Split component",
  "type": "object",
  "properties": {
    "baseClass": {
      "const": "fd-button-split",
      "description": "Required base class"
    },
    "modifiers": {
      "type": "array",
      "items": {
        "enum": [
          "fd-button-split--emphasized",
          "fd-button-split--transparent",
          "fd-button-split--ghost",
          "fd-button-split--positive",
          "fd-button-split--negative",
          "fd-button-split--attention"
        ]
      },
      "description": "Optional modifier classes"
    }
  },
  "required": [
    "baseClass"
  ]
}