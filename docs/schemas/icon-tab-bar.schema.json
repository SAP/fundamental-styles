{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://sap.github.io/fundamental-styles/schemas/icon-tab-bar.json",
  "title": "Icon Tab Bar Component",
  "description": "The Icon Tab Bar can be used for navigation within an object, or as a filter. Each tab of the component links to a different content area or view.",
  "type": "object",
  "properties": {
    "baseClass": {
      "const": "fd-icon-tab-bar__popover",
      "description": "Required base class"
    },
    "modifiers": {
      "type": "array",
      "items": {
        "enum": [
          "fd-icon-tab-bar__popover--single-click",
          "fd-icon-tab-bar__popover--dnd-preview",
          "fd-icon-tab-bar__popover--dnd-hovered",
          "fd-icon-tab-bar__popover--dnd-separator",
          "fd-icon-tab-bar__popover--filter",
          "fd-icon-tab-bar__popover--animated",
          "fd-icon-tab-bar__popover--transparent",
          "fd-icon-tab-bar__popover--translucent",
          "fd-icon-tab-bar__popover--counters",
          "fd-icon-tab-bar__popover--icon-only",
          "fd-icon-tab-bar__popover--icon",
          "fd-icon-tab-bar__popover--process",
          "fd-icon-tab-bar__popover--with-separator",
          "fd-icon-tab-bar__popover--navigation-horizontal",
          "fd-icon-tab-bar__popover--responsive-paddings",
          "fd-icon-tab-bar__popover--overflow"
        ]
      },
      "description": "Optional modifier classes"
    },
    "elements": {
      "type": "object",
      "description": "Optional element classes with their available modifiers",
      "properties": {
        "fd-icon-tab-bar__popover__header": {
          "type": "object",
          "description": "header element",
          "properties": {
            "class": {
              "const": "fd-icon-tab-bar__popover__header",
              "description": "Element class name"
            }
          }
        },
        "fd-icon-tab-bar__popover__panel": {
          "type": "object",
          "description": "panel element",
          "properties": {
            "class": {
              "const": "fd-icon-tab-bar__popover__panel",
              "description": "Element class name"
            }
          }
        },
        "fd-icon-tab-bar__popover__item": {
          "type": "object",
          "description": "item element",
          "properties": {
            "class": {
              "const": "fd-icon-tab-bar__popover__item",
              "description": "Element class name"
            },
            "modifiers": {
              "type": "array",
              "items": {
                "enum": [
                  "fd-icon-tab-bar__popover__item--overflow",
                  "fd-icon-tab-bar__popover__item--multi-click",
                  "fd-icon-tab-bar__popover__item--closable"
                ]
              },
              "description": "Available modifiers for this element"
            }
          }
        },
        "fd-icon-tab-bar__popover__button-container": {
          "type": "object",
