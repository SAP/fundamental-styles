            }
          }
        },
        "fd-icon-tab-bar__popover__counter": {
          "type": "object",
          "description": "counter element",
          "properties": {
            "class": {
              "const": "fd-icon-tab-bar__popover__counter",
              "description": "Element class name"
            }
          }
        },
        "fd-icon-tab-bar__popover__icon": {
          "type": "object",
          "description": "icon element",
          "properties": {
            "class": {
              "const": "fd-icon-tab-bar__popover__icon",
              "description": "Element class name"
            }
          }
