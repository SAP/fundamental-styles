          "type": "object",
          "description": "tab element",
          "properties": {
            "class": {
              "const": "fd-icon-tab-bar__popover__tab",
              "description": "Element class name"
            }
          }
        },
        "fd-icon-tab-bar__popover__tab-container": {
          "type": "object",
          "description": "tab-container element",
          "properties": {
            "class": {
              "const": "fd-icon-tab-bar__popover__tab-container",
