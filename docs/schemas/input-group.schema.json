{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://sap.github.io/fundamental-styles/schemas/input-group.json",
  "title": "Input Group Component",
  "description": "Input Group component",
  "type": "object",
  "properties": {
    "baseClass": {
      "const": "fd-input-group",
      "description": "Required base class"
    },
    "modifiers": {
      "type": "array",
      "items": {
        "enum": [
          "fd-input-group--inline",
          "fd-input-group--readonly",
          "fd-input-group--button",
          "fd-input-group--control",
          "fd-input-group--display"
        ]
      },
      "description": "Optional modifier classes"
    },
    "elements": {
      "type": "object",
      "description": "Optional element classes with their available modifiers",
      "properties": {
        "fd-input-group__addon": {
          "type": "object",
          "description": "addon element",
          "properties": {
            "class": {
              "const": "fd-input-group__addon",
              "description": "Element class name"
            }
          }
        },
        "fd-input-group__sr-only": {
          "type": "object",
          "description": "sr-only element",
          "properties": {
            "class": {
              "const": "fd-input-group__sr-only",
              "description": "Element class name"
            }
          }
        }
      },
      "additionalProperties": false
    }
  },
  "required": [
    "baseClass"
  ]
}
