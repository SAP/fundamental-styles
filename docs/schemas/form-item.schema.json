{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://sap.github.io/fundamental-styles/schemas/form-item.json",
  "title": "Form Item Component",
  "description": "Container for individual form field with label and input",
  "type": "object",
  "properties": {
    "baseClass": {
      "const": "fd-form-item",
      "description": "Required base class"
    },
    "modifiers": {
      "type": "array",
      "items": {
        "enum": [
          "fd-form-item--horizontal"
        ]
      },
      "description": "Optional modifier classes"
    },
    "elements": {
      "type": "object",
      "description": "Optional element classes with their available modifiers",
      "properties": {
        "fd-form-item__label-container": {
          "type": "object",
          "description": "label-container element",
          "properties": {
            "class": {
              "const": "fd-form-item__label-container",
              "description": "Element class name"
            }
          }
        }
      },
      "additionalProperties": false
    }
  },
  "required": [
    "baseClass"
  ]
}