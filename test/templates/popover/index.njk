{% extends "layout.njk" %}
{% import "./../utils.njk" as utils %}
{% from "./../format.njk" import format %}
{% from "./component.njk" import popover, popover_popperjs, popover_content %}

{% block content %}

<style media="screen">
    .fd-popover{ margin-left: 100px; margin-right: 100px;}

    .sample-control {
      padding: 10px;
      margin: 0;
      border: 1px solid black;
      background: #ccc;
      font-size: 14px;
    }
    .sample-content {
      font-size: 14px;
      margin: 0;
      border: 0;
      padding: 10px;
    }
</style>


{%- set _id = utils.id() %}
{%- set _id2 = utils.id() %}
{%- set _id3 = utils.id() %}
{%- set _id4 = utils.id() %}
{%- set _id5 = utils.id() %}
{%- set _id6 = utils.id() %}
{%- set _id7 = utils.id() %}

{%- macro sample_control(properties={}) -%}
  <button class="fd-popover__control sample-control" aria-controls="{{ properties.id }}" aria-expanded="false" aria-haspopup="true"{{ " disabled" if state.disabled }}{{ aria | aria }}>
    Click Here
  </button>
{%- endmacro %}

<h2>popover with menu default </h2>
{% set example %}
{{  popover(properties={
    id: _id,
    control: sample_control(properties={id: _id}),
    body: popover_content()
  })
}}
<br><br><br><br><br><br><br><br>
{% endset %}
{{ format(example) }}

<br><br><br><br>

<h2>popover with menu left </h2>
{% set example %}
{{  popover(properties={
    id: _id7,
    control: sample_control(properties={id: _id7}),
    body: popover_content()
  }, modifier={ block: ['left']})
}}
<br><br><br><br><br><br><br><br>
{% endset %}
{{ format(example) }}

<br><br><br><br>

<h2>popover with menu right </h2>
