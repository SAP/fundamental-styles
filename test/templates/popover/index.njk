{{  popover(properties={
    id: _id2,
    control: sample_control(properties={id: _id2}),
    body: popover_content()
  }, modifier={ block: ['right']})
}}
<br><br><br><br><br><br><br><br>
{% endset %}
{{ format(example) }}
<br><br>

<h2>No Arrow left </h2>
{% set example %}

{{  popover(properties={
    id: _id3,
    control: sample_control(properties={id: _id3}),
    body: popover_content()
  }, modifier={ block: ['no-arrow']})
}}
<br><br><br><br><br><br><br><br>
{% endset %}
{{ format(example) }}

<br><br><br><br>

<h2>No Arrow right </h2>
{% set example %}

{{  popover(properties={
    id: _id4,
    control: sample_control(properties={id: _id4}),
    body: popover_content()
  }, modifier={ block: ['no-arrow', 'right']})
}}
<br><br><br><br><br><br><br><br>
{% endset %}
{{ format(example) }}

<br><br><br><br>

<h2>Use with popper.js</h2>
<p>NOTE: This will not be functional as the popper.js library is not being used here so this
is simply a styling example.</p>
{% set example %}

{{  popover_popperjs(properties={
    id: _id5,
    control: sample_control(properties={id: _id5}),
    body: popover_content()
  }, modifier={ block: []})
}}
<br><br><br><br><br><br><br><br>
{% endset %}
{{ format(example) }}

<br><br><br><br>

<h2>No Arrow with popper.js</h2>
