{% extends "layout.njk" %}
{% from "./../format.njk" import format %}
{% from "./component.njk" import panel, panel_header, panel_actions, panel_filters, panel_body, panel_footer %}

{% set panel_example %}
{% call panel() -%}
    {% call panel_header({ title: ".fd-layout-panel__title", description: ".fd-layout-panel__description" }) -%}
    {% call panel_actions() -%}
.fd-layout-panel__actions
    {%- endcall %}

    {%- endcall %}

    {%- call panel_filters() %}
.fd-layout-panel__filters
    {%- endcall %}
    {% call panel_body() -%}
      .fd-layout-panel__body
    {%- endcall %}
    {% call panel_footer() -%}
.fd-layout-panel__footer
    {%- endcall %}
{%- endcall %}
{% endset %}


