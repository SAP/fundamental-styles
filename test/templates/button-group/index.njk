{% extends "layout.njk" %}
{% from "./../format.njk" import format %}
{% from "./component.njk" import button_group %}


{% block content %}
<style media="screen">
  .fd-button-group {
    margin-bottom: 10px;
  }
</style>

<style>
  .btn-playground {
    border-style: solid;
    border-width: 1px;
    border-radius: 4px;
  }
</style>

<h2>default</h2>

{% set example %}

  {% call button_group() -%}
    <button class="btn-playground sap-icon--survey" aria-label="Survey"></button>
    <button class="btn-playground sap-icon--pie-chart" aria-label="Chart"></button>
    <button class="btn-playground sap-icon--pool" aria-label="Pool"></button>
  {%- endcall %}

    {% call button_group() -%}
     <button class="btn-playground">First</button>
     <button class="btn-playground">Second</button>
     <button class="btn-playground">Third</button>
  {%- endcall %}

  {% call button_group() -%}
     <button class="btn-playground">First</button>
     <button class="btn-playground">Second</button>
     <button class="btn-playground">Third</button>
     <button class="btn-playground">Fourth</button>
  {%- endcall %}

    {% endset %}
    {{ format(example) }}

<h2> disabled </h2>

{% set example %}

  {% call button_group() -%}
    <button class="btn-playground sap-icon--survey" aria-label="Survey" disabled></button>
    <button class="btn-playground sap-icon--pie-chart" aria-label="Chart"></button>
    <button class="btn-playground sap-icon--pool" aria-label="Pool"></button>
  {%- endcall %}

    {% call button_group() -%}
     <button class="btn-playground">First</button>
     <button class="btn-playground" disabled>Second</button>
     <button class="btn-playground">Third</button>
  {%- endcall %}

  {% call button_group() -%}
     <button class="btn-playground">First</button>
     <button class="btn-playground">Second</button>
     <button class="btn-playground" disabled>Third</button>
      <button class="btn-playground">Fourth</button>
  {%- endcall %}

    {% endset %}
    {{ format(example) }}

{% endblock %}

