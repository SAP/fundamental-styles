{% extends "layout.njk" %}
{% from "./../format.njk" import format %}
{% from "../button/component.njk" import button2 %}
{% from "./component.njk" import button_group %}

{% block content %}
<style media="screen">
  .fd-button-group {
    margin-bottom: 10px;
  }
</style>
<h2>default</h2>


    {% for size in ["","compact"] %}
      {%- set modifier = { block: [size] } %}
      {%- if size == "default" %}
        {%- set modifier = { block: [] } %}
      {%- endif %}
<h2> {{size}}</h2>

{% set example %}

  {% call button_group() -%}
    {{-  button2(
      { icon: 'survey' },
        modifier={ block: [size] },
        aria={ label: 'Survey' })
      }}
    {{-  button2(
        { icon: 'pie-chart' },
          modifier={ block: [size] },
          aria={ label: 'Chart', selected: true })
        }}
    {{-  button2(
          { icon: 'pool' },
            modifier={ block: [size] },
            aria={ label: 'Pool' })
          }}
  {%- endcall %}

  {% call button_group() -%}
    {{-  button2(
      { label: 'First' },
        modifier={ block: [size] },
        aria={ selected: true })
      }}
    {{-  button2(
        { label: 'Second' },
          modifier={ block: [size] },
          aria={ })
        }}
    {{-  button2(
          { label: 'Third' },
            modifier={ block: [size] },
            aria={ })
          }}
  {%- endcall %}


    {% endset %}
    {{ format(example) }}


    {% endfor %}

<h2> disabled </h2>

{% set example %}

  {% call button_group() -%}
    {{-  button2(
      { icon: 'survey' },
      disabled = true,
        modifier={ block: [""] },
        aria={ label: 'Survey' })
      }}
    {{-  button2(
        { icon: 'pie-chart' },
          modifier={ block: [""] },
          aria={ label: 'Chart' })
        }}
    {{-  button2(
          { icon: 'pool' },
            modifier={ block: [""] },
            aria={ label: 'Pool' })
          }}
  {%- endcall %}

    {% call button_group() -%}
    {{-  button2(
      { label: 'First' },
        modifier={ block: ["compact"] },
        aria={ })
      }}
    {{-  button2(
        { label: 'Second' },
        disabled = true,
          modifier={ block: ["compact"] },
          aria={ })
        }}
    {{-  button2(
          { label: 'Third' },
            modifier={ block: ["compact"] })
          }}
  {%- endcall %}

  {% call button_group() -%}
    {{-  button2(
      { label: 'First' },
        modifier={ block: [""] },
        aria={ })
      }}
    {{-  button2(
        { label: 'Second' },
          modifier={ block: [""] },
          aria={ })
        }}
    {{-  button2(
          { label: 'Third' },
          disabled = true,
            modifier={ block: [""] })
          }}
  {%- endcall %}

    {% endset %}
    {{ format(example) }}

{% endblock %}
