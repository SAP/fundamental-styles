{% import "./../utils.njk" as utils %}

{% macro checkbox(properties="", state="", compact=false) -%}
    {%- set _id = utils.id() %}
    <input type="checkbox" class="{{'fd-checkbox'}}{{ ' is-'+state if state }}{{ ' fd-checkbox--compact' if compact }}" id="{{_id}}" name="checkbox" {{properties}}>
	<label class="fd-checkbox__label" for="{{_id}}">Label</label>
{%- endmacro %}
