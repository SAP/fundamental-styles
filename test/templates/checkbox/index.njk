{% extends "layout.njk" %}
{% from "./../format.njk" import format %}
{% from "./component.njk" import checkbox %}

{% block content %}

<h2>Default</h2>

{% set example %}
  {{ checkbox() }}
{% endset %}
 <br><br>
{{ format(example) }}
 <br><br>

<h2>Checked</h2>

{% set example %}
  {{ checkbox(properties='checked') }}
{% endset %}

{{ format(example) }}


{% set example %}
  {{ checkbox(properties='checked') }}
  {{ checkbox(properties='indeterminate') }}
  {{ checkbox() }}
{% endset %}

{{ format(example) }}
<h2>States</h2>

{% set example %}
  {{ checkbox(properties='disabled') }}
  {{ checkbox(properties='disabled checked') }}
  {{ checkbox(properties='disabled indeterminate') }}
{% endset %}

{{ format(example) }}

{% endblock %}
