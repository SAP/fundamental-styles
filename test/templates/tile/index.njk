{% extends "layout.njk" %}
{% from "./../format.njk" import format %}
{% from "./component.njk" import tile, tile_content, tile_media, tile_actions %}

{% block content %}
<style media="screen">
  .fd-tile {
    margin-bottom: 10px;
  }
</style>



{%- set tile_default %}
{% call tile() -%}
  {% call tile_content({ title: data.properties.title }) -%}
  {%- endcall %}
{%- endcall %}
{% endset %}

{%- set tile_button %}
  {% call tile(aria={role: 'button'}) -%}
    {% call tile_content({ title: data.properties.title }) -%}
    {%- endcall %}
  {%- endcall %}
{%- endset %}
{%- set tile_description %}
{%- call tile() -%}
{% call tile_content(data.properties) -%}
{%- endcall %}
{%- endcall %}
{%- endset %}

{%- set tile_media_id %}
{% call tile() -%}
{% call tile_media() -%}
  <img src="/static/nature.jpg" alt="picture" width="30px" height="30px">
{%- endcall %}
{%- call tile_content({ title: data.properties.title }) -%}
{%- endcall %}
{%- endcall %}
{% endset %}

{%- set tile_media_id_accent %}
{%- call tile() -%}
  {%- call tile_media() -%}
    <img src="/static/nature.jpg" alt="picture" width="30px" height="30px">
  {%- endcall %}
  {%- call tile_content(data.properties) -%}
  {%- endcall %}
{%- endcall %}
{% endset %}


{%- set tile_media_image %}
{%- call tile() -%}
  {% call tile_media() -%}
   <img src="/static/nature.jpg" alt="picture" width="30px" height="30px">
  {%- endcall %}
  {%- call tile_content({ title: data.properties.title }) -%}
  {%- endcall %}
{%- endcall %}
{% endset %}

{%- set tile_media_image_round %}
{%- call tile() -%}
  {% call tile_media() -%}
   <img src="/static/nature.jpg" alt="picture" width="30px" height="30px">
  {%- endcall %}
  {%- call tile_content(data.properties) -%}
  {%- endcall %}
{%- endcall %}
{% endset %}


{%- set tile_actions %}
  {%- call tile() -%}
    {% call tile_content({ title: data.properties.title }) -%}
    {%- endcall %}
    {%- call tile_actions() -%}
    <button>Button</button>
 
    {%- endcall %}
  {%- endcall %}
{% endset %}


<h2>default</h2>
{% set example %}
{{tile_default}}
{{tile_description}}
{% endset %}
{{ format(example) }}

<br><br>

<h2>
  with <code>.fd-media</code> container
</h2>
{% set example %}
{{tile_media_id}}
{{tile_media_id_accent}}
{{tile_media_image}}
{{tile_media_image_round}}
{% endset %}
{{ format(example) }}

