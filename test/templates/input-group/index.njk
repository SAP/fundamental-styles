{% extends "layout.njk" %}
{% from "./component.njk" import input_group %}
{% from "./../format.njk" import format %}

{% block content %}

{% set types = ["text", "textarea"] %}
{% set addons = [["", "km/h"], ["$", ""], ["$", ".00"]] %}
{% set readonly = [false, true] %}

<h2>Input Groups w/ addon text</h2>

{%- set example %}
    {%- for ro in readonly %}
        <h3>{{ 'Disabled' if ro }}</h3>
        {%- for type in types %}
            {%- for before, after in addons %}
                {{ input_group(
                    properties={
                        type: type,
                        before: before,
                        after: after,
                        input: {
                            state: {
                                readonly: ro
                            },
                            properties: {
                                value: "19387309"
                            }
                        }
                    })
                }}
                <br />
            {%- endfor %}
        {%- endfor %}
    {%- endfor %}
{%- endset %}
{{ format(example) }}

<br /><br />
<h2>Input Groups w/ addon buttons</h2>

{% set btn %}
    <button class="btn-playground">Click Me</button>
{% endset %}
{% set addons = [["", btn], [btn, ""], [btn, btn]] %}

{%- set example %}
    {%- for ro in readonly %}
        <h3>{{ 'Disabled' if ro }}</h3>
        {%- for type in types %}
            {%- for before, after in addons %}
                {{ input_group(
                    properties={
                        type: type,
                        before: before,
                        after: after,
                        input: {
                            state: {
                                readonly: ro
                            },
                            properties: {
                                value: "19387309"
                            }
                        }
                    },
                    modifier={
                        before: ["button"],
                        after: ["button"]
                    })
                }}
                <br />
            {%- endfor %}
        {%- endfor %}
    {%- endfor %}
{%- endset %}
{{ format(example) }}

<br /><br />

<h2>Input Groups w/ addon multiple buttons</h2>

{% set btnUpDown %}
    <button class="btn-playground">Up</button>
    <button class="btn-playground">Down</button>
{% endset %}
{% set addons = [["", btnUpDown], [btnUpDown, ""], [btnUpDown, btnUpDown]] %}

{%- set example %}
    {%- for ro in readonly %}
        <h3>{{ 'Disabled' if ro }}</h3>
        {%- for before, after in addons %}
            {{ input_group(
                properties={
                    before: before,
                    after: after,
                    input: {
                        state: {
                            readonly: ro
                        },
                        properties: {
                            value: "19387309"
                        }
                    }
                },
                modifier={
                    before: ["button"],
                    after: ["button"]
                })
            }}
            <br />
        {%- endfor %}
    {%- endfor %}
{%- endset %}
{{ format(example) }}


