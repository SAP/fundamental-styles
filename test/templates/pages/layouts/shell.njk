{% from "./../../action-bar/component.njk" import action_bar %}
{% from "./../../button/component.njk" import button %}
{% from "./../../breadcrumb/component.njk" import breadcrumb %}
{% from "./../../shellbar/component.njk" import shellbar %}
{% from "./../../tabs/component.njk" import tabs %}

{% set hide_ui_footer = true %}
{% block ui_header %}
  {{ shellbar() }}
{% endblock %}

{% block page_header %}
{%- if show_breadcrumb %}
{{  breadcrumb(
        properties=data.breadcrumb.properties
    )
}}
{%- endif %}
{%- set btns = [] %}
  {%- if is_editable_page %}
{%- set btns = [button(
          { label: 'Save' },
          modifier={ block: ['main', 'l'] }
      ),    button(
              { label: 'Cancel' },
              modifier={block: [ 'light', 'l'] }
          )] %}
    {# {%- else  %}
    {%- set btns = [button(
              { label: 'Add', icon: 'add' },
              modifier={ block: ['l'] }
          )] %} #}
  {%- endif %}
  {%- set page_description = page_intro or "" %}
{{  action_bar(
        properties={
            title: page_title,
            description: page_description,
            actions: {
                properties: {
                    items: btns
                }
            }
        },
        modifier={
            block: []
        },
        state={},
        aria={}
    )
}}
{% endblock %}

{% block app_navigation %}

{{  tabs(
        properties={
          items: [
              {
                  "label": "Nunc"
              },
              {
                  "label": "Pellentesque",
                  "selected": true
              },
              {
                  "label": "Cras"
              },
              {
                  "label": "Vivamus"
              }
          ]
        },
        modifier={
            block: []
        },
        state={},
        aria={},
        classes="has-border-bottom-none"
    )
}}

{% endblock %}
