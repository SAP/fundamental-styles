<!--
avatar:
    properties={},
    modifier={ block: [] },
    state={},
    aria={}
-->
{% macro avatar(properties={}, modifier={}, state={}, aria={}, classes="") -%}
    {%- set thumb %}{%- if properties.thumbnail %}style="background-image: url({{ properties.thumbnail }})"{%- endif %}{%- endset %}
    <span class="fd-avatar{{ modifier.block | modifier('avatar') }}{{ ' sap-icon--'+properties.icon if properties.icon and not properties.thumbnail }}{{ state | state }}{{ classes | classes }}" {{ thumb }}{{ aria | aria }}>{{ properties.initials if properties.initials }}
        {% if properties.zoomIcon %}
            <span class="fd-avatar__zoom-icon sap-icon--edit" role="presentation"></span>
        {%- endif %}
    </span>
{%- endmacro %}
