{% set modifiers = ["", "compact", "no-border"] %}

{% block content %}

    <h2>Basic</h2>
    {% set example %}
        {%- for modifier in modifiers %}
            {%- if modifier %}
                <h3>{{ modifier }}</h3>
            {%- endif %}
            {{ list(basic_list, modifier=[modifier]) }}
        {%- endfor %}
    {% endset %}
    {{ format(example) }}

    <h2>Secondary text</h2>
    {% set example %}
        {%- for modifier in modifiers %}
            {%- if modifier %}
                <h3>{{ modifier }}</h3>
            {%- endif %}
