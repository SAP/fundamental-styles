	<h2>Basic Dropdown</h2>
	{% set example %}
		{%- for modifier in modifiers %}
			{%- if modifier %}
				<h3>{{ modifier }}</h3>
			{%- endif %}
			{{ list(basic_list, toggles={"dropdown": true}, modifier=[modifier]) }}
		{%- endfor %}
	{% endset %}
	{{ format(example) }}

	<h2>Dropdown with active and selected state</h2>
	{% set example %}
		{%- for modifier in modifiers %}
			{%- if modifier %}
				<h3>{{ modifier }}</h3>
			{%- endif %}
			{{ list(dropdown_list, toggles={"dropdown": true}, modifier=[modifier]) }}
		{%- endfor %}
	{% endset %}
	{{ format(example) }}

	<h2>Dropdown with active and selected state, plus message</h2>
	{% set example %}
		{%- for modifier in modifiers %}
			{%- if modifier %}
				<h3>{{ modifier }}</h3>
			{%- endif %}
			{{ list(dropdown_list, toggles={"dropdown": true, "hasMessage": true}, modifier=[modifier]) }}
		{%- endfor %}
	{% endset %}
	{{ format(example) }}

