		{%- endfor %}
	{% endset %}
	{{ format(example) }}

	<h2>Dropdown with active and selected state, plus message and 2 columns, overflow no wrap</h2>
	{% set example %}
		{%- for modifier in modifiers %}
			{%- if modifier %}
				<h3>{{ modifier }}</h3>
			{%- endif %}
			{{ list(dropdown_list, toggles={"dropdown": true, "useSecondary": true, "hasMessage": true, "noWrap": true}, modifier=[modifier]) }}
		{%- endfor %}
	{% endset %}
	{{ format(example) }}

    <h2>Standard List with Byline</h2>
    {% set example %}
        {%- for modifier in bylineModifiers %}
            {%- if modifier %}
                <h3>{{ modifier }}</h3>
            {%- endif %}
            {{ list(byline_list, toggles={"byline": true}, modifier=[modifier]) }}
        {%- endfor %}
    {% endset %}
    {{ format(example) }}

    <h2>Standard List with Byline and Semantic Byline Second Item</h2>
    {% set example %}
        {%- for modifier in bylineModifiers %}
            {%- if modifier %}
                <h3>{{ modifier }}</h3>
            {%- endif %}
            {{ list(byline_semantic_list, toggles={"byline2col": true, "byline": true}, modifier=[modifier]) }}
        {%- endfor %}
    {% endset %}
    {{ format(example) }}

    <h2>Standard List with Byline, Semantic Byline Second Item and Selection</h2>
