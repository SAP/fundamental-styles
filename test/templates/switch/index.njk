{% extends "layout.njk" %}
{% from "./../format.njk" import format %}
{% from "./component.njk" import switch %}

{% block content %}

<h3>Cozy Switch (default)</h3>
{% set example %}
<label>
{{  switch(
      modifier={
          block: []
      }
    )
}}
</label>

<label>
{{  switch(
        modifier={
            block: ['no-text']
        }
    )
}}
</label>

<label>
{{  switch(
        modifier={
            block: ['semantic']
        }
    )
}}
</label>
{% endset %}
{{ format(example) }}

<br><br><br>

<h3>Compact Switch</h3>
{% set example %}
<label>
{{  switch(
        modifier={
            block: ['compact']
        }

    )
}}
</label>

<label>
{{  switch(
        properties={
            offLabel: 'OFF',
            onLabel: 'ON'
        },
        modifier={
            block: ['compact', 'no-text']
        }

    )
}}
</label>

<label>
{{  switch(
        properties={},
        modifier={
            block: ['compact', 'semantic']
        }

    )
}}
</label>
{% endset %}
{{ format(example) }}

<hr>

<h2>checked</h2>
{% set example %}
</label>
<label>
{{  switch(
        modifier={
            block: ['compact']
        },
        state={
            checked: true
        }
    )
}}
</label>
<label>
{{  switch(
        modifier={
            block: ['compact', 'no-text']
        },
        state={
            checked: true
        }
    )
}}
</label>
<label>
{{  switch(
        modifier={
            block: ['compact', 'semantic']
        },
        state={
            checked: true
        }
    )
}}
</label>
{% endset %}
{{ format(example) }}


<br><br><br>

<hr>

<h2>disabled</h2>
{% set example %}
<label>
{{  switch(
        modifier={
            block: ['compact', 'semantic']
        },
        state={
            disabled: true
        }
    )
}}
</label>
<label>
{{  switch(
        modifier={
            block: ['compact']
        },
        state={
            disabled: true
        }
    )
}}
</label>
<label>
{{  switch(
        modifier={
            block: ['compact', 'semantic']
        },
        state={
            disabled: true,
            checked: true
        }
    )
}}
</label>
<label>
{{  switch(
        modifier={
            block: ['compact']
        },
        state={
            disabled: true,
            checked: true
        }
    )
}}
</label>
{% endset %}
{{ format(example) }}

<h2>Inline label</h2>
{% set example %}
<label>
{{  switch(
        properties={
            inlineLabel: 'Testing a long label here'
        },
        modifier={
            block: ['xs']
        }

    )
}}
</label>
<label>
{{  switch(
        properties={
            inlineLabel: 'Short label'
        },
        modifier={
            block: ['s']
        }

    )
}}
</label>
<label>
{{  switch(
        properties={
            inlineLabel: 'Testing a long label here'
        }
    )
}}
</label>
<label>
{{  switch(
        properties={
            inlineLabel: 'Testing a long label here'
        },
        modifier={
            block: ['xl']
        }

    )
}}
</label>
{% endset %}
{{ format(example) }}


{% endblock %}
