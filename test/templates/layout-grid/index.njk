{% extends "layout.njk" %}
{% from "./../format.njk" import format %}
{% from "./component.njk" import layout_grid %}

{% block content %}

{%- set div_playground %}
<div class="panel-playground">Placeholder div</div>
{% endset %}

{%- set div_layoutItem %}
    <div class="panel-playground>Placeholder div</div>
    <div class="panel-playground>Placeholder div</div>
    <div class="panel-playground>Placeholder div</div>
{% endset %}

{% macro layout_item(direction="", number="") -%}
<div class="panel-playground fd-layout-grid__span-{{direction}}-{{number}}">Placeholder div</div>
{%- endmacro %}

<h2>1-col grid (default)</h2>

<h2>1 col grid</h2>
{% set example %}
    {{ layout_grid(
            properties={
                items: [
                div_playground, div_playground, div_playground, div_playground, div_playground, div_playground
                ]
            },
             modifier={
                
            }
        )
    }}
{% endset %}
{{ format(example) }}


<h2>3 col grid</h2>
{% set example %}
    {{ layout_grid(
            properties={
                items: [
                div_playground, div_playground, div_playground, div_playground, div_playground, div_playground
                ]
            },
             modifier={
                block: ["3"]
            }
        )
    }}
{% endset %}
{{ format(example) }}

<h2>3 col grid no gap</h2>
{% set example %}
    {{ layout_grid(
            properties={
                items: [
                div_playground, div_playground, div_playground, div_playground, div_playground, div_playground
                ]
            },
             modifier={
                block: ["no-gap", "3"]
            }
        )
    }}
{% endset %}
{{ format(example) }}

<h2>3 col grid with nesting</h2>
{% set example %}
<div class="fd-layout-grid fd-layout-grid--2-6">
    <div class="fd-layout-grid fd-layout-grid--2">
        <div class="fd-layout-grid fd-layout-grid--1">
            <div class="panel-playground">Placeholder div</div>
            <div class="panel-playground">Placeholder div</div>
        </div>
            <div class="panel-playground">Placeholder div</div>
    </div>
    <div class="panel-playground">Placeholder div</div>
    <div class="panel-playground">Placeholder div</div>
</div>
{% endset %}
{{ format(example) }}

<br><br>

<h2>3 col grid - row helper classes</h2>

{% set example %}
    {{ layout_grid(
            properties={
                items: [
                layout_item(direction="row", number="2"), div_playground, div_playground, div_playground, div_playground, div_playground
                ]
            },
             modifier={
                block: ["col-3"]
            }
        )
    }}
{% endset %}
{{ format(example) }}

<h2>6 col grid - col helper classes</h2>

{% set example %}
    {{ layout_grid(
            properties={
                items: [
                layout_item(direction="column", number="3"), div_playground, div_playground, div_playground, div_playground, div_playground
                ]
            },
             modifier={
                block: ["col-6"]
            }
        )
    }}
{% endset %}
{{ format(example) }}

{% endblock %}
