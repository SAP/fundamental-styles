{% extends "layout.njk" %}
{% from "./../format.njk" import format %}
{% from "./component.njk" import modal %}



{% block content %}

    <style>
        .fd-modal {
            position: static;
            background-color: transparent;
        }

        .fd-modal__content {
            position: static;
            transform: translate(0%, 0%);
            width: 30rem;
            margin: auto;
        }

        .fd-modal__content:not(:last-child) {
            margin-bottom: 2rem;
        }
    </style>

    {% set body_content = "Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum." %}

    <h1>Modal in default mode</h1>
    {% set example %}

        {{ modal(
            properties={
                body: body_content,
                actions: [
                    { label: 'Confirm'},
                    { type: 'light', label: 'Cancel' }
                ]
            }
        ) }}

    {% endset %}
    {{ format(example) }}

    <br><br>

    <h1>Modal with loader</h1>
    {% set example %}

        {{ modal(
            properties={
                modal_content: {
                    has_loader: true
                },
                body: body_content,
                actions: [
                    { type: 'light', label: 'Cancel' }
                ]
            }
        ) }}

    {% endset %}
    {{ format(example) }}

    <br><br>

    {% set example %}

        <h1>Modal in resizable mode</h1>

        {{ modal(
            properties={
                modal_content: {
                    is_resizable: true
                },
                body: body_content,
                actions: [
                    { label: 'Confirm'},
                    { type: 'light', label: 'Cancel' }
                ]
            }
        ) }}

        <h1>Modal in draggable mode</h1>

        {{ modal(
            properties={
                modal_content: {
                    is_draggable: true
                },
                body: body_content,
                actions: [
                    { label: 'Confirm'},
                    { type: 'light', label: 'Cancel' }
                ]
            }
        ) }}

    {% endset %}
    {{ format(example) }}
    <br><br>


    {% set example %}
        {% for size in ["s", "m", "l", "xl"] %}
            <h1>Modal size {{ size }}</h1>
            {{ modal(
                properties={
                    modal_content: {
                        modal_content_size: size,
                        has_subheader: true
                    },
                    body: body_content,
                    actions: [
                        { label: 'Confirm'},
                        { type: 'light', label: 'Cancel' }
                    ]
                }
            ) }}
        {% endfor %}

        <h1>Modal with no vertical paddings</h1>
        {{ modal(
            properties={
                modal_content: {
                    has_no_vertical_paddings: true
                },
                body: body_content,
                actions: [
                    { label: 'Confirm'},
                    { type: 'light', label: 'Cancel' }
                ]
            }
        ) }}
    {% endset %}
    {{ format(example) }}

{% endblock %}
